{% extends 'base.html.twig' %}

{% block title %}Hello VehicleController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Devices</h1>
                {% if is_mobile %}
                    {% include 'device/devices_table_mobile.html.twig' with {'devices': devices} %}
                {% else %}
                    {% include 'device/devices_table.html.twig' with {'devices': devices} %}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Add device</h1>
                {{ form_start(form) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.name) }}
                        {{ form_label(form.name) }}
                    </div>
                    <hr>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.authentication_token) }}
                        {{ form_label(form.authentication_token) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
