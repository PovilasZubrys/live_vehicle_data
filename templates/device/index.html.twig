{% extends 'base.html.twig' %}

{% block title %}Hello VehicleController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Devices</h1>
                <table class="table table-hover table-dark">
                    <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for device in devices  %}
                        <tr>
                            <th scope="row">{{ device.id }}</th>
                            <td>{{ device.name }}</td>
                            <td>Some actions</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Add device</h1>
                <form method="POST">
                    <div class="form-floating mb-3">
                        <input name="name" type="text" class="form-control" id="nameInput" placeholder="Device name" required>
                        <label for="nameInput" style="color: black;">Device name</label>
                    </div>
                    <hr>
                    <div class="form-floating mb-3">
                        <input name="authentication_token" type="text" class="form-control" id="authenticationToken" placeholder="Authentication Token" required>
                        <label for="authenticationToken" style="color: black;">Authentication Token</label>
                    </div>
                    <hr>
                    <label>Assign vehicle for this device: </label>
                    {% for vehicle in vehicles  %}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="vehicle" id="{{ vehicle.id }}" value="{{ vehicle.id }}">
                            <label class="form-check-label" for="{{ vehicle.id }}">Id: {{ vehicle.id }} Vehicle info: {{ vehicle.make }}, {{ vehicle.model }}, {{ vehicle.year }}</label>
                        </div>
                    {% endfor %}

                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
