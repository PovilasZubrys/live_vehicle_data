{% extends 'base.html.twig' %}

{% block title %}Hello VehicleController!{% endblock %}

{% block body %}
    <div {{ stimulus_controller('device')}} class="container">
        <div class="row">
            <div class="col">
                <h1>Devices</h1>
                <table class="table table-hover table-dark">
                    <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Current active vehicle</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for device in devices  %}
                        <tr>
                            <th scope="row">{{ device.id }}</th>
                            <td>{{ device.name }}</td>
                            <td>
                                {% if device.vehicle is not empty %}
                                    {{ device.vehicle.make }} {{ device.vehicle.model }} {{ device.vehicle.year }} (ID:{{ device.vehicle.id }})
                                {% endif %}
                            </td>
                            <td>
                                {% include 'device/delete_modal.html.twig' with {'device': device, 'action_path': 'app_delete_device'}%}
                                <a style="cursor: pointer; color: inherit" type="button" title="Delete device" data-bs-toggle="modal" data-bs-target="#staticBackdrop_device_{{ device.id }}" class="bi bi-trash"></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Add device</h1>
                {{ form_start(form) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.name) }}
                        {{ form_label(form.name) }}
                    </div>
                    <hr>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.authentication_token) }}
                        {{ form_label(form.authentication_token) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
