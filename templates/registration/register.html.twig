{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="margin-top: 0"  class="container h-100">
        <div style="margin-top: 0"  class="row h-100 justify-content-center align-items-center">
            <div class="col-sm-12 col-lg-6">
                <h1>Register</h1>

                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                <div class="form-floating mb-3">
                    {{ form_widget(registrationForm.email) }}
                    {{ form_label(registrationForm.email) }}
                </div>
                <dvi class="form-floating mb-3">
                    {{ form_widget(registrationForm.plainPassword) }}
                    {{ form_label(registrationForm.plainPassword) }}
                </dvi>

                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="{{ path('app_login') }}" class="btn btn-secondary">Sign in!</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
