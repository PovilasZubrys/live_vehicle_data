<!-- Modal -->
<div class="modal fade" id="staticBackdrop_vehicle_{{ vehicle.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Are you sure?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you really want to delete {{ vehicle.make }} {{ vehicle.model }} {{ vehicle.year }} (ID:{{ vehicle.id }}) vehicle?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="{{ path(action_path, {'id': vehicle.id}) }}" type="button" class="btn btn-danger">Yes!</a>
            </div>
        </div>
    </div>
</div>